@using Microsoft.AspNetCore.Identity;
@using TopNews.Core.Entities.User;
@using TopNews.Web.Models.ViewModels;
@model UpdateProfileVM
@inject UserManager<AppUser> UserManager;

@{
    var user = await UserManager.GetUserAsync(User);
    var email = await UserManager.GetEmailAsync(user);
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>User managament</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">User profile</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">@email</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header info -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 offset-3">
                            <div class="card card-danger">
                                <div class="card-header">
                                    <h3 class="card-title">Update info</h3>
                                </div>
                                <!-- /.card-header -->
                                <!-- form start -->
                                @if (@ViewBag.UserUpdateError != null)
                                {
                                    <span class="text-danger mt-3">@ViewBag.UserUpdateError</span>
                                }
                                <form method="post" asp-action="ChangeMainInfo">
                                    <div class="card-body">
                                        <input type="hidden" name="Id" asp-for="@Model.UserInfo.Id" value=@user.Id />
                                        <div class="form-group">
                                            <label for="FirstName">First Name</label>
                                            <input type="text" asp-for="@Model.UserInfo.FirstName" name="FirstName" class="form-control" placeholder="First Name" />
                                        </div>
                                        <div class="form-group">
                                            <label for="LastName">Last Name</label>
                                            <input type="text" asp-for="@Model.UserInfo.LastName" name="LastName" class="form-control" placeholder="Last Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="Email">Email</label>
                                            <input type="email" name="Email" asp-for="@Model.UserInfo.Email" class="form-control" placeholder="Email">
                                        </div>
                                        <div class="form-group">
                                            <label for="PhoneNumber">Phone Number</label>
                                            <input type="text" name="PhoneNumber" asp-for="@Model.UserInfo.PhoneNumber" class="form-control" placeholder="PhoneNumber">
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-danger">Update</button>
                                    </div>
                                </form>
                            </div>
                            <hr />
                        </div>
                    </div>
                </div>
                <!-- /.card -->
                <!-- /.card-header password -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 offset-3">
                            <div class="card card-danger">
                                <div class="card-header">
                                    <h3 class="card-title">Update password</h3>
                                </div>
                                <!-- /.card-header -->
                                <!-- form start -->
                                @if (@ViewBag.UpdatePasswordError != null)
                                {
                                    <span class="text-danger mt-3">@ViewBag.UpdatePasswordError</span>
                                }
                                <form method="post" asp-action="Profile">
                                    <div class="card-body">
                                        <input type="hidden" name="Id" asp-for="=@user.Id" value=@user.Id />
                                        <div class="form-group">
                                            <label for="Password">Old Password</label>
                                            <input type="password" asp-for="@Model.UpdatePassword.OldPassword" name="OldPassword" class="form-control" placeholder="Old password" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Password">New Password</label>
                                            <input type="password" asp-for="@Model.UpdatePassword.NewPassword" name="NewPassword" class="form-control" placeholder="New Password">
                                        </div>
                                        <div class="form-group">
                                            <label for="ConfirmPassword">Confirm Password</label>
                                            <input type="password" name="ConfirmPassword" asp-for="@Model.UpdatePassword.ConfirmPassword" class="form-control" placeholder="Confirm Password">
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-danger">Update</button>
                                    </div>
                                </form>
                            </div>
                            <hr />
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>